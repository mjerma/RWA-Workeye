@using Evidencija_radnih_sati.Resources

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand pr-4 py-3" href="#">Workeye</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item px-2">
                <a class="nav-link" href="@Url.Action("PracenjeRada", "Home", new { datum = DateTime.Now })">
                    <i class="far fa-clock px-1"></i> @Navigacija.PracenjeRada
                </a>
            </li>
            <li class="nav-item px-2">
                <a class="nav-link" href="@Url.Action("Profil", "Home")">
                    <i class="far fa-user px-1"></i>@Navigacija.Profil
                </a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown px-2">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @Html.Label(Navigacija.Jezik)
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    @Html.ActionLink(Navigacija.Hrvatski, "PromjenaJezika", "Home", new { jezik = "hr" }, new { @class = "dropdown-item" })
                    @Html.ActionLink(Navigacija.Engleski, "PromjenaJezika", "Home", new { jezik = "en" }, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item px-2">
                <a class="nav-link" href="@Url.Action("Prijava", "Home")">
                    @Navigacija.Odjava
                </a>
            </li>
        </ul>
    </div>
</nav>

