@model Evidencija_radnih_sati.Models.ViewModel.ProfilVM
@using Evidencija_radnih_sati.Resources

@{
    Layout = null;
    ViewBag.Title = "Profil";
}

<html>
<head>
    <title>Profil</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/Profil.css" rel="stylesheet" />
    <link href="~/Content/Error.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    @{Html.RenderAction("Navigacija", "Home");}
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4 text-center">@Profil.ProfilNaslov</h1>
            <hr class="my-4">
        </div>
        <div class="d-flex justify-content-center">
            <div class="table-container">
                <table class="table table-responsive">
                    <tbody>
                        <tr>
                            <td>
                                @Profil.Ime
                            </td>
                            <td>
                                @Model.djelatnik.Ime
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Profil.Prezime
                            </td>
                            <td>
                                @Model.djelatnik.Prezime
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Profil.Email
                            </td>
                            <td>
                                @Model.djelatnik.Email
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Profil.DatumZaposlenja
                            </td>
                            <td>
                                @Model.djelatnik.DatumZaposlenja.ToShortDateString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Profil.TipDjelatnika
                            </td>
                            <td>
                                @Model.TipDjelatnika
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="float-right">
                    <input type="button" id="btnPromjeniZaporku" name="btnPromjeniZaporku" value="@Profil.PromjeniZaporku" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div id="formPromjeniZaporku">
            @using (Html.BeginForm("Profil", "Home", FormMethod.Post))
            {
                @Html.Hidden("IDDjelatnik", Model.djelatnik.IDDjelatnik)
                <div class="jumbotron">
                    <h1 class="display-4 text-center promjena-zaporke">@Profil.PromjenaZaporke</h1>
                </div>
                <div class="form-group">
                    <label>@Profil.NovaZaporka</label>
                    @Html.TextBox(name: "novaZaporka", value: "", htmlAttributes: new { @class = "form-control", @type = "password" })
                    <span class="field-validation-valid" data-valmsg-for="novaZaporka" data-valmsg-replace="true"></span>
                    <div class="form-group">
                        <label>@Profil.PonoviteNovuZaporku</label>
                        @Html.TextBox(name: "ponoviNovuZaporku", value: "", htmlAttributes: new { @class = "form-control", @type = "password" })
                        <span class="field-validation-valid" data-valmsg-for="ponoviNovuZaporku" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group float-right">
                        @Html.ActionLink(Profil.Odustani, "Profil", "Home", new { @class = "btn btn-outline-primary" })
                        <input type="submit" name="name" value="@Profil.Spremi" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
        <script src="~/Scripts/Profil.js"></script>
</body>
</html>



